  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css
  ">

  </head>

  <body>
    <h1>Edit Book</h1>
    <div class="container ">
      <div class="row ">
        <%-include('header')%>
        <div class="col-4">
          <%-include('sidebar')%>
        </div>
        <div class="form col-8 d-flex  ">
          <form action="/update/<%=single.id%>" method="post" enctype="multipart/form-data">
            <div class="col-6">
              <label>Book Title :-</label>
              <input type="text" name="title" value="<%=single.title%>">
              <label >Author</label>
              <input type="text" name="author" id="" value="<%=single.author%>">
              <label>Total :-</label>
              <input type="text" name="total" value="<%=single.total%>">
              
            </div>
            <div class="col-6">
              <label >Book Image :-</label>
              <input type="file" name="image" >
              <img src="<%=single.image%>" width="100px" alt="">
              <label>Genre</label>
              <input type="checkbox" name="genre" value="Romance" <% if(single.genre.includes('Romance')){ %>checked <%}%> >Romance
              <input type="checkbox" name="genre" value="Classic"<% if(single.genre.includes('Classic')){ %>checked <%}%>  id="">Classic
              <input type="checkbox" name="genre" value="Fantasy"<% if(single.genre.includes('Fantasy')){ %>checked <%}%>  id="">Fantasy
              <input type="checkbox" name="genre" value="Fiction"<% if(single.genre.includes('Fiction')){ %>checked <%}%>  id="">Fiction
              <input type="checkbox" name="genre" value="Dystopian"<% if(single.genre.includes('Dystopian')){ %>checked <%}%>  id="">Dystopian
              <label >Description</label>
              <input type="text" name="description" value="<%=single.description%>" id="">

            </div>
            <input type="submit" value="Update" id="">
          </form>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js
  "></script>
  </body>

  </html>