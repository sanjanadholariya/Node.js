<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Quiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
      <h4 class="text-primary">Question <%= index + 1 %> of <%= total %></h4>
      <a href="/addQuiz" class="btn btn-sm btn-outline-secondary">Add Quiz</a>
    </div>

    <div class="card shadow p-4">
      <!-- Question text -->
      <h5 class="mb-4 fw-bold"><%= currentQuestion.question %></h5>

      <!-- Answer options -->
      <form action="/nextQuestion/<%=index+1%>/<%=count%>" method="post">
        <% currentQuestion.options.forEach((opt, i) => { %>
          <div class="form-check mb-2">
            <input class="form-check-input" type="radio" name="answer" value="<%=opt%>" id="option<%=i%>" required>
            <label class="form-check-label" for="option<%=i%>"><%=opt%></label>
          </div>
        <% }) %>

        <div class="mt-4">
          <% if(index+1 >= total){ %>
            <button type="submit" class="btn btn-success w-100">Finish</button>
          <% } else { %>
            <button type="submit" class="btn btn-primary w-100">Next</button>
          <% } %>
        </div>
      </form>
    </div>
  </div>

</body>
</html>
